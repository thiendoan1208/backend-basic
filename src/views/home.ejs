<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create-user-page">Create</a>
    </div>
    <div>
        <table>
            <tr>
                <th>ID</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
            <% data.forEach((user)=> { %>
                <tr>
                    <td>
                        <%= user.ID %>
                    </td>
                    <td>
                        <%= user.LastName %>
                    </td>
                    <td>
                        <%= user.FirstName %>
                    </td>
                    <td>
                        <%= user.Email %>
                    </td>
                    <td>
                        <%= user.Address %>
                    </td>
                    <td>
                        <div>
                            <button><a href="/details/<%= user.ID %>">Detail</a></button>
                            <button><a href="/edit-user-page/<%= user.ID %>">Edit</a></button>
                            <form action="/delete-user/<%= user.ID %>" method="post">
                                <input type="submit" value="Delete">
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
        </table>
    </div>
</body>

</html>